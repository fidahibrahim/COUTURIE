    <script>
        function validateForm() {
            var productName = document.getElementById('productName').value.trim().replace(/[^a-zA-Z]/g, '');
            var productDescription = document.getElementById('productDescription').value.trim().replace(/[^a-zA-Z]/g, '');
            var price = parseFloat(document.getElementById('Price').value.trim());
            var quantity = parseInt(document.getElementById('Quantity').value.trim());
    
            var productNameError = document.getElementById('productNameError');
            var productDescriptionError = document.getElementById('productDescriptionError');
            var priceError = document.getElementById('priceError');
            var quantityError = document.getElementById('quantityError');
    
            var isValid = true;
    
            // Validate Product Name
            if (productName === '') {
                productNameError.textContent = 'Product Name is required';
                isValid = false;
            } else if (!productName.match(/^[A-Za-z\s]*$/)) {
                productNameError.textContent = 'Product Name should only contain letters and spaces';
                isValid = false;
            } else {
                productNameError.textContent = '';
            }
    
            // Validate Description
            if (productDescription === '') {
                productDescriptionError.textContent = 'Description is required';
                isValid = false;
            } else if (!productDescription.match(/^[A-Za-z\s]*$/)) {
                productDescriptionError.textContent = 'Description should only contain letters and spaces';
                isValid = false;
            } else {
                productDescriptionError.textContent = '';
            }
    
            // Validate Price
            if (isNaN(price) || price <= 0) {
                priceError.textContent = 'Price must be a valid number greater than 0';
                isValid = false;
            } else {
                priceError.textContent = '';
            }
    
            // Validate Quantity
            if (isNaN(quantity) || quantity <= 0) {
                quantityError.textContent = 'Quantity must be a valid number greater than 0';
                isValid = false;
            } else {
                quantityError.textContent = '';
            }
    
            // Additional check to prevent submission if fields contain only spaces
            if (
                productName.replace(/\s/g, '') === '' ||
                productDescription.replace(/\s/g, '') === '' ||
                isNaN(price) ||
                isNaN(quantity)
            ) {
                isValid = false;
            }
    
            return isValid;
        }
    </script>
    
    



