                                                <ul class="pagination">
                                                    <li class="page-item">
                                                        <a class="page-link" href="/admin/orders?id=<%= Previous%>" aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                            <span class="sr-only">Previous</span>
                                                        </a>
                                                    </li>
                                                    <% if (currentPage > 1) { %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="/admin/orders?id=1">1</a>
                                                        </li>
                                                        <% if (currentPage > 2) { %>
                                                            <li class="page-item disabled">
                                                                <span class="page-link">...</span>
                                                            </li>
                                                        <% } %>
                                                    <% } %>
                                                    <% const startPage = Math.max(1, currentPage - 2); %>
                                                    <% const endPage = Math.min(totalPages, startPage + 4); %>
                                                    <% for(let i = startPage; i <= endPage; i++){ %>
                                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                            <a class="page-link" href="/admin/orders?id=<%= i %>">
                                                                <%= i %>
                                                            </a>
                                                        </li>
                                                    <% } %>
                                                    <% if (currentPage < totalPages) { %>
                                                        <% if (currentPage < totalPages - 1) { %>
                                                            <li class="page-item disabled">
                                                                <span class="page-link">...</span>
                                                            </li>
                                                        <% } %>
                                                        <li class="page-item">
                                                            <a class="page-link" href="/admin/orders?id=<%= totalPages %>">
                                                                <%= totalPages %>
                                                            </a>
                                                        </li>
                                                    <% } %>
                                                    <li class="page-item">
                                                        <a class="page-link" href="/admin/orders?id=<%= Next%>" aria-label="Next">
                                                            <span aria-hidden="true">&raquo;</span>
                                                            <span class="sr-only">Next</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </nav>
                                            
                                            
