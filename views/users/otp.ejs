    <script>
        let timer;
        let timeLeft = 60;
        let isResendAllowed = true;


        function startTimer() {
            timer = setInterval(() => {
                if (timeLeft > 0) {
                    document.getElementById("timer").textContent = `Resend OTP in ${timeLeft} seconds`;
                    timeLeft--;
                } else {
                    clearInterval(timer);
                    document.getElementById("timer").textContent = "";
                    isResendAllowed = true;
                }
            }, 1000);
        }

        function resetTimer() {
            clearInterval(timer);
            timeLeft = 60;
            startTimer();
        }

        function enableResendButton() {
            document.getElementById("resendBtn").disabled = false;
        }

        function disableResendButton() {
            document.getElementById("resendBtn").disabled = true;
        }

        document.getElementById("resendBtn").addEventListener("click", async () => {
            if (isResendAllowed) {
                isResendAllowed = false;
                const email = document.getElementById("email").value;
                try {
                    const response = await fetch("/resend-otp", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ email })
                    });
                    if (response.ok) {
                        resetTimer();
                        enableResendButton();
                        document.getElementById("errorMessage").textContent = "";
                    } else {
                        throw new Error("Failed to resend OTP");
                    }
                } catch (error) {
                    console.error(error);
                    enableResendButton();
                    document.getElementById("errorMessage").textContent = "Failed to resend OTP. Please try again.";
                }
            }
        });

        window.addEventListener("load", () => {
            startTimer();
            disableResendButton();
        });


    </script>



    <script>
        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("register-password-2");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
