    <script>
        async function placeOrder(button) {
            const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
            const cashOnDeliveryCollapse = document.getElementById('collapse-3');
            const razorPayCollapse = document.getElementById('collapse-4');
            const walletCollapse = document.getElementById('collapse-5');

            if (!selectedAddress) {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Please select an address!",
                });
                return;
            }

            let selectedPayment;
            if (cashOnDeliveryCollapse && cashOnDeliveryCollapse.classList.contains('show')) {
                selectedPayment = "Cash on Delivery";
            } else if (razorPayCollapse && razorPayCollapse.classList.contains('show')) {
                selectedPayment = "Razor Pay";
            } else if (walletCollapse && walletCollapse.classList.contains('show')) {
                selectedPayment = "Wallet";
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Please select a payment method!",
                });
                return;
            }

            const data = {
                address: selectedAddress.value,
                subTotal: button.getAttribute('data-subtotal'),
                payment: selectedPayment,
            };

            try {
                const response = await fetch("/placeOrder", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });

                if (!response.ok) {
                    throw new Error("Network response was not ok.");
                }

                const responseData = await response.json();

                if (responseData.success) {
                    Swal.fire({
                        icon: "success",
                        title: "Success!",
                        text: "Your order has been placed successfully!",
                        timer: 2000,
                    }).then(() => {
                        window.location.href = `/order/${responseData.orderId}`;
                    });
                } else if (responseData.quan) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Cannot Add Product!',
                        text: `Product ${responseData.insufficientProducts} is Out of Stock`,
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Can\'t place order!',
                        text: 'Insufficient wallet amount',
                    });
                }
            } catch (error) {
                console.error("Error:", error);
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Something went wrong. Please try again!",
                });
            }
        }
    </script>

