                                    <a class="nav-link" href="/logout">Sign Out</a>
                                </li>
                            </ul>
                        </aside><!-- End .col-lg-3 -->

                        <div class="col-md-8 col-lg-9">
                            <div class="tab-content">
                                <div class="transaction-history-page">
                                    <div class="header">
                                        <!-- <button class="btn-back">Back</button> -->
                                        <h1>Transaction History</h1>
                                    </div>
                                    <div class="transaction-table">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th>Type</th>
                                                    <th>Amount</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(user.walletHistory.length > 0){%>
                                                <% user.walletHistory.forEach(history=>{%>
                                                <tr>
                                                    <td><%= history.reason%></td>
                                                    <td>₹<%= history.amount%></td>
                                                    <td><%= moment(history.date).format('DD/MM/YYYY')%></td>
                                                </tr>
                                                <%})%>
                                                <%}else{%>
                                                    <tr>
                                                        <td> No Transaction</td>
                                                    </tr>
                                                    <%}%>

                                            </tbody>
                                        </table>
                                    </div>
                                    
                                </div>

                                    <nav aria-label="Page navigation">
                                        <ul class="pagination justify-content-center">
                                            <li class="page-item ">
                                                <a class="page-link page-link-prev" href="/transaction?id=<%= Previous %>"
                                                    aria-label="Previous" tabindex="-1">
                                                    <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                                                </a>
                                            </li>
                                            <% for(let i=1; i<=totalPages; i++){ %>
                                                <li class="page-item active" aria-current="page"><a class="page-link"
                                                        href="/transaction?id=<%= i%>"> <%= i%>
                                                        
                                                    </a></li>
                                                <% } %>
                                                    <li class="page-item-total">of <%= totalPages%>
                                                    </li>
                                                    <li class="page-item">
                                                        <a class="page-link page-link-next" href="/transaction?id=<%= Next %>"
                                                            aria-label="Next">
                                                            Next <span aria-hidden="true"><i
                                                                    class="icon-long-arrow-right"></i></span>
                                                        </a>
                                                    </li>
                                        </ul>
                                    </nav>
                            </div>
                        </div>
                        <!-- End .col-lg-9 -->
